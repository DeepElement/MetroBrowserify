<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <MetroBrowserifyIsStandAlone Condition=" '$(MetroBrowserifyIsStandAlone)' == '' ">false</MetroBrowserifyIsStandAlone>
    <MetroBrowserifyStandAloneNamespace Condition=" '$(MetroBrowserifyStandAloneNamespace)' == '' ">MetroBrowserify</MetroBrowserifyStandAloneNamespace>
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
    <MetroBrowserifyBuildDependsOn>
        MetroBrowserifyCleanCacheRecords;
        MetroBrowserifyCompileCacheRecords;
        MetroBrowserifyPackageExtraFiles;
        MetroBrowserifyUpdateBOMHeaders
    </MetroBrowserifyBuildDependsOn>
  </PropertyGroup>

  <Target Name="MetroBrowserifyCleanCacheRecords" >
    <ItemGroup>
      <CacheFiles Include="$(ProjectDir)\**\*.cache" />
    </ItemGroup>
    <Delete Files="@(CacheFiles)" />
  </Target>

  <Target Name="MetroBrowserifySetupNpmDependencies" BeforeTargets="RestoreNpmPkgs">
    <Exec Command="npm update browserify" />
  </Target>

  <Target Name="MetroBrowserifyCompileCacheRecords" AfterTargets="RestoreNpmPkgs" DependsOnTargets="MetroBrowserifyCleanCacheRecords">
    <ItemGroup>
      <JsFiles Include="$(ProjectDir)\**\*.node.js" Exclude="$(ProjectDir)\bin\**\*.*" />
    </ItemGroup>

    <Exec Command="browserify %(JsFiles.Identity) -o %(JsFiles.RootDir)%(JsFiles.Directory)%(JsFiles.Filename).js.cache" Condition=" '$(MetroBrowserifyIsStandAlone)' == 'false' " />
     
    <Exec Command="browserify %(JsFiles.Identity) -s $(MetroBrowserifyStandAloneNamespace) -o %(JsFiles.RootDir)%(JsFiles.Directory)%(JsFiles.Filename).js.cache" Condition=" '$(MetroBrowserifyIsStandAlone)' == 'true' " />
  </Target>

  <Target Name="MetroBrowserifyPackageExtraFiles" DependsOnTargets="MetroBrowserifyCompileCacheRecords">
    <Message Text="PreCompilation-Files: %(PackagingOutputs.Identity)  TargetPath:%(PackagingOutputs.TargetPath)"  Importance="high" />
    <ItemGroup>
      <_AddToPackageFiles Include="$(ProjectDir)\**\*.cache" Exclude="$(ProjectDir)\bin\**\*.*" ></_AddToPackageFiles>
      <PackagingOutputs Remove="@(PackagingOutputs)" Condition="'%(Extension)'=='.cache'"></PackagingOutputs>
      <PackagingOutputs Remove="@(PackagingOutputs)" Condition="$([System.String]::new('%(Filename)').EndsWith('.node'))"></PackagingOutputs>
      <PackagingOutputs Include="@(_AddToPackageFiles -> '%(FullPath)')">
        <OutputGroup>Content</OutputGroup>
        <ProjectName>$(ProjectName)</ProjectName>
        <TargetPath>%(RecursiveDir)%(Filename)</TargetPath>
      </PackagingOutputs>
    </ItemGroup>
  </Target>

  <Target Name="MetroBrowserifyUpdateBOMHeaders" DependsOnTargets="MetroBrowserifyPackageExtraFiles">
    <Message Text="Updating BOM headers" />
    <WriteLinesToFile Condition="Exists('%(CacheFiles.FullPath)')" File="%(CacheFiles.FullPath)" Lines="$([System.IO.File]::ReadAllText(%(CacheFiles.FullPath)))" Overwrite="true" Encoding="utf-8" />
  </Target>

  <Target Name="MetroBrowserifyBuild" DependsOnTargets="$(MetroBrowserifyBuildDependsOn)" AfterTargets="GetPackagingOutputs">
    <Message Text="PostCompilation-Files: %(PackagingOutputs.Identity)  TargetPath:%(PackagingOutputs.TargetPath)"  Importance="high" />
  </Target>
</Project>